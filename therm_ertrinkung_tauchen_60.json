  "title": "Thermische, Ertrinkungs- & Tauchnotfälle",
  "questions": [
    {
      "id": "frage_001",
      "type": "single",
      "stem": "Welches Symptom ist typisch für einen Hitzschlag?",
      "options": [
        {
          "id": "a",
          "text": "Körperkerntemperatur > 40 °C, heiße trockene Haut, Bewusstseinsstörung",
          "isCorrect": true,
          "explanation": "Beim Hitzschlag ist die Thermoregulation ausgefallen."
        },
        {
          "id": "b",
          "text": "Normale Körpertemperatur mit Schwitzen",
          "isCorrect": false
        },
        {
          "id": "c",
          "text": "Blasse Haut und Schüttelfrost",
          "isCorrect": false
        }
      ]
    },
    {
      "id": "frage_002",
      "type": "single",
      "stem": "Welche Maßnahme ist bei Sonnenstich entscheidend?",
      "options": [
        {
          "id": "a",
          "text": "Schatten, Oberkörperhochlagerung, Kühlung des Kopfes",
          "isCorrect": true,
          "explanation": "Sonnenstich entsteht durch Wärmestau am Kopf und Meningenreizung."
        },
        {
          "id": "b",
          "text": "Heißgetränke geben",
          "isCorrect": false
        },
        {
          "id": "c",
          "text": "Warme Decken",
          "isCorrect": false
        }
      ]
    },
    {
      "id": "frage_003",
      "type": "single",
      "stem": "Welches Vorgehen ist bei großflächigen Verbrennungen wichtig?",
      "options": [
        {
          "id": "a",
          "text": "Kühlung nur kurz, dann sterile Abdeckung",
          "isCorrect": true,
          "explanation": "Längere Kühlung führt zu Hypothermie."
        },
        {
          "id": "b",
          "text": "Großflächig mit Eis behandeln",
          "isCorrect": false
        },
        {
          "id": "c",
          "text": "Blasen eröffnen",
          "isCorrect": false
        }
      ]
    },
    {
      "id": "frage_004",
      "type": "single",
      "stem": "Welche Besonderheit gilt bei Unterkühlung?",
      "options": [
        {
          "id": "a",
          "text": "Niemand ist tot, bevor er warm und tot ist",
          "isCorrect": true,
          "explanation": "Unterkühlte Patienten dürfen erst nach Erwärmung für tot erklärt werden."
        },
        {
          "id": "b",
          "text": "Reanimation ist bei Hypothermie kontraindiziert",
          "isCorrect": false
        },
        {
          "id": "c",
          "text": "Defibrillation ist immer sofort wirksam",
          "isCorrect": false
        }
      ]
    },
    {
      "id": "frage_005",
      "type": "single",
      "stem": "Welches Leitsymptom weist auf Ertrinken hin?",
